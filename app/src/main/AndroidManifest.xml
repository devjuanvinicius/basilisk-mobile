<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.basilisk">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:allowBackup="true"
      android:dataExtractionRules="@xml/data_extraction_rules"
      android:fullBackupContent="@xml/backup_rules"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/Theme.AppCompat.NoActionBar"
      tools:targetApi="31">

    <activity
        android:name=".LoginActivity"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".CadastroActivity"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:exported="false"/>
    <activity
        android:name=".novaRendaActivity"
        android:exported="false"/>
    <activity
        android:name=".CofrinhoActivity"
        android:exported="true"/>
    <activity
        android:name=".EntryActivity"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"/>
    <activity
        android:name=".InvestimentoActivity"
        android:exported="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"/>
    <activity
        android:name=".EditInvestActivity"
        android:exported="false"/>
    <activity
        android:name=".AddInvestActivity"
        android:exported="false"/>
    <activity
        android:name=".PerfilActivity"
        android:exported="false"/>
    <activity
        android:name=".TotalRendas"
        android:exported="false"/>
    <activity
        android:name=".EditarDespesa"
        android:exported="false"/>
    <activity
        android:name=".novaDespesa"
        android:exported="false"/>
    <activity
        android:name=".EditarRenda"
        android:exported="false"/>
    <activity
        android:name=".CalendarioActivity"
        android:exported="false"/>

    <activity android:name=".AddMeta" android:exported="true"/>
    <activity android:name=".EditMeta" android:exported="true"/>


    <meta-data
        android:name="preloaded_fonts"
        android:resource="@array/preloaded_fonts"/>
  </application>
</manifest>
