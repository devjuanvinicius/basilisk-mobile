<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentaAddMeta"
    android:background="@color/slate800"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ExtraText">


        <TextView
            android:id="@+id/textNomeMeta"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_slab_bold"
            android:text="Adicione uma meta"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.097"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/Titulo_meta"
            android:layout_width="375dp"
            android:layout_height="49dp"
            android:background="@drawable/backgrainput"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.432"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.236"
            tools:ignore="MissingConstraints"
            android:hint="Name"/>

        <EditText
            android:id="@+id/valor_total"
            android:layout_width="375dp"
            android:layout_height="49dp"
            android:background="@drawable/backgrainput"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.376"
            tools:ignore="MissingConstraints"
            android:hint="valor da meta"
            />

        <EditText
            android:id="@+id/data_de_inicio"
            android:layout_width="375dp"
            android:layout_height="49dp"
            android:background="@drawable/backgrainput"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.514"
            tools:ignore="MissingConstraints"
            android:textSize="15dp"
            android:hint="09/10"
            />

        <EditText
            android:id="@+id/edit_data_de_finalizacao"
            android:layout_width="375dp"
            android:layout_height="49dp"
            android:background="@drawable/backgrainput"
            android:ems="10"
            android:inputType="text"
            android:paddingStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.652"
            tools:ignore="MissingConstraints"
            android:hint="09/11"
            />

        <TextView
            android:id="@+id/Titulo_metaTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.199"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:fontFamily="@font/roboto_slab_bold"

            />

        <TextView
            android:id="@+id/Valor_totalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor Total"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.334"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/dataInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de inicio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.466"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_bold"
            />

        <TextView
            android:id="@+id/datadefinalizacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de finalizacao"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.598"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_slab_bold"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="359dp"
            android:layout_height="35dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="183dp"
            android:background="@drawable/radiuscar3"
            android:text="Adicionar"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_data_de_finalizacao"
            tools:ignore="MissingConstraints" /> <!-- Adiciona espaço à esquerda do texto -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

